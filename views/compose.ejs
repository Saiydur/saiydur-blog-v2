<%- include ('partials/header'); -%>
    <h1>
        Compose
    </h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input class="form-control" id="postTitle" type="text" name="postTitle">
            <label for="postBody">Post</label>
            <textarea class="form-control" id="postBody" name="postBody" cols="30" rows="10"></textarea>
            <br>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>